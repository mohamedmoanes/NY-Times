<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moanes.nytimes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NYTimes">
        <activity
            android:name=".ArticleListActivity"
            android:label="@string/title_article_list"
            android:theme="@style/Theme.NYTimes.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArticleDetailActivity"
            android:label="@string/title_article_detail"
            android:parentActivityName=".ArticleListActivity"
            android:theme="@style/Theme.NYTimes.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moanes.nytimes.ArticleListActivity" />
        </activity>
    </application>

</manifest>